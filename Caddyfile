expense-sync-bot.invntrm.ru {
	# Automatic HTTPS with Let's Encrypt

	# OAuth callback endpoint (proxied to local server)
	handle /callback* {
		reverse_proxy localhost:3311
	}

	# Temporary images for OCR processing
	handle /temp-images/* {
		root * /var/www/ExpenseSyncBot
		file_server
	}

	# Health check endpoint
	handle /health {
		reverse_proxy localhost:3311
	}

	# All other requests return 404 (bot doesn't serve web pages)
	handle {
		respond "ExpenseSyncBot is running" 200
	}

	# Logging
	log {
		output file /var/log/caddy/expensesyncbot.log
		format console
	}
}
